FROM nvidia/cudagl:11.3.0-devel-ubuntu20.04
SHELL ["/bin/bash", "-c"]
# Set the timezone info because otherwise tzinfo blocks install 
# flow and ignores the non-interactive frontend command ðŸ¤¬ðŸ¤¬ðŸ¤¬
RUN ln -snf /usr/share/zoneinfo/America/New_York /etc/localtime && echo "/usr/share/zoneinfo/America/New_York" > /etc/timezone

# Core system packages
RUN apt-get update --fix-missing
RUN apt install -y software-properties-common wget curl gpg gcc git make

# Install miniconda to /miniconda
RUN curl -LO http://repo.continuum.io/miniconda/Miniconda3-latest-Linux-x86_64.sh
RUN bash Miniconda3-latest-Linux-x86_64.sh -p /miniconda -b
RUN rm Miniconda3-latest-Linux-x86_64.sh
ENV PATH=/miniconda/bin:${PATH}
RUN conda update -y conda

RUN apt install -y apt-utils

ENV TORCH_CUDA_ARCH_LIST="Ampere;Turing;Pascal"
ENV FORCE_CUDA="1"
RUN conda update -y conda
RUN conda install numpy python=3.9 pip -y
RUN apt install -y libeigen3-dev
RUN pip install open3d==0.16.0
RUN git clone https://github.com/isl-org/Open3D /Open3D
WORKDIR /Open3D
# Checkout git tag of v0.16.0
RUN git checkout v0.16.0
RUN conda install cmake
RUN SUDO=command util/install_deps_ubuntu.sh assume-yes
RUN mkdir build
WORKDIR /Open3D/build
RUN cmake ..
RUN make -j$(nproc)
RUN make install

RUN git clone https://github.com/url-kaist/patchwork-plusplus /patchworkplusplus
WORKDIR /patchworkplusplus
RUN mkdir build
WORKDIR /patchworkplusplus/build
RUN cmake ..
RUN make -j$(nproc)
RUN make install
WORKDIR /patchworkplusplus/build/python_wrapper
RUN make install

RUN conda install pytorch==1.12.1 torchvision torchaudio cudatoolkit=11.3 -c pytorch -y
RUN conda install -c fvcore -c iopath -c conda-forge fvcore iopath -y
RUN pip install --no-index --no-cache-dir pytorch3d -f https://dl.fbaipublicfiles.com/pytorch3d/packaging/wheels/py39_cu113_pyt1121/download.html


ENV PYTHONPATH=/project/:/patchworkplusplus/build/python_wrapper:${PYTHONPATH}
COPY bashrc /root/.bashrc
WORKDIR /project/
